<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for individual queue button in RecyclerView.

    Displays:
    - Color indicator (left border, 4dp wide)
    - Queue icon (24dp Material Design icon)
    - Queue name (text, truncates if too long)
    - Active indicator (checkmark, shown when queue is active)
    - Delete button (shown on long-press or in edit mode)

    Height: 56dp (standard Material Design list item height)
    Padding: 12dp
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="0dp"
        android:paddingEnd="12dp">

        <!-- Color indicator (left border) -->
        <View
            android:id="@+id/color_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Queue icon -->
        <ImageView
            android:id="@+id/queue_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/queue_icon"
            android:src="@drawable/ic_playlist_play_24dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/color_indicator"
            app:tint="?android:attr/textColorPrimary" />

        <!-- Queue name -->
        <TextView
            android:id="@+id/queue_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="@string/queue_name"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/queue_icon"
            app:layout_constraintEnd_toStartOf="@id/active_indicator"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Active indicator (checkmark) -->
        <ImageView
            android:id="@+id/active_indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/active_queue"
            android:src="@drawable/ic_check_circle_24dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete_button"
            app:tint="?attr/colorPrimary" />

        <!-- Delete button (context action) -->
        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="@string/delete_queue"
            android:src="@drawable/ic_delete_24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="?android:attr/textColorSecondary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
