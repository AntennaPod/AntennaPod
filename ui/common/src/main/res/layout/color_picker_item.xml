<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for color picker item in grid.

    Contains:
    - Circular color view (40dp diameter)
    - Checkmark overlay for selected color
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Color circle -->
    <ImageView
        android:id="@+id/color_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="@string/color_option" />

    <!-- Checkmark for selected color -->
    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_check_24dp"
        android:contentDescription="@string/selected"
        android:visibility="gone"
        app:tint="#FFFFFF" />

</FrameLayout>
