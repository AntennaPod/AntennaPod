<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queues_dialog_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/queues_dialog_new_queue_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_add"
        app:endIconContentDescription="@string/add_queue_label"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/queues_dialog_new_queue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_queue_label"
            android:layout_weight="1"
            android:padding="16dp"
            android:inputType="text"
            android:ems="10" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
