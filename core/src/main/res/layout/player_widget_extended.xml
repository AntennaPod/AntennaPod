<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin" >

    <RelativeLayout
        android:id="@+id/widgetExtendedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262C31"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/layout_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/layout_left"
            android:layout_toRightOf="@id/layout_left"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <TextView
                android:id="@+id/txtNoPlaying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/no_media_playing_label"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_micro"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_center"
            android:layout_toEndOf="@id/layout_left"
            android:layout_toRightOf="@id/layout_left"
            android:gravity="left|top"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/butRew"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/rewind_label"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_av_fast_rewind_white_48dp" />

            <ImageButton
                android:id="@+id/butPlay"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/play_label"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_av_play_white_48dp" />

            <ImageButton
                android:id="@+id/butFastForward"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/fast_forward_label"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_av_fast_forward_white_48dp" />

            <ImageButton
                android:id="@+id/butSkip"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/skip_episode_label"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_av_skip_white_24dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:gravity="fill_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgvCover"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"
                android:importantForAccessibility="no"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"/>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>