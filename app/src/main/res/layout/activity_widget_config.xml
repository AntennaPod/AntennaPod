<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/widget_config_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/teaser" />

        <include
            android:id="@+id/widget_config_preview"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            layout="@layout/player_widget" />

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stylish Typography -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_opacity"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/cool_stylish_fonts" />

            <TextView
                android:id="@+id/widget_opacity_textView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="100%"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/cool_stylish_fonts" />

            <!-- Vibrant Colors and Iconography -->
            <SeekBar
                android:id="@+id/widget_opacity_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:max="100"
                android:progress="100"
                android:progressTint="@color/vibrant_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/ckPlaybackSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/playback_speed"
                    android:fontFamily="@font/cool_stylish_fonts"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/vibrant_green" />

                <CheckBox
                    android:id="@+id/ckRewind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rewind_label"
                    android:fontFamily="@font/cool_stylish_fonts"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/vibrant_blue" />

                <CheckBox
                    android:id="@+id/ckFastForward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fast_forward_label"
                    android:fontFamily="@font/cool_stylish_fonts"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/vibrant_orange" />

                <CheckBox
                    android:id="@+id/ckSkip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/skip_episode_label"
                    android:fontFamily="@font/cool_stylish_fonts"
                    android:textColor="@android:color/black"
                    android:buttonTint="@color/vibrant_purple" />

            </LinearLayout>

            <!-- Stylish Button with Playful Animation -->
            <Button
                android:id="@+id/butConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/widget_create_button"
                android:textColor="@android:color/black"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:fontFamily="@font/cool_stylish_fonts"
                android:stateListAnimator="@animator/button_state_list_animator" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
