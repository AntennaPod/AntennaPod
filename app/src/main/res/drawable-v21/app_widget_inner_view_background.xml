    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle">

    <corners android:radius="@android:dimen/system_app_widget_inner_radius"
        tools:targetApi="s" />
    <solid android:color="?android:attr/colorAccent" />
</shape>